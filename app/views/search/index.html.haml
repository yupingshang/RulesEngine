= content_for :scripts do
  = javascript_include_tag "//maps.google.com/maps/api/js?key=AIzaSyAg1uPmwADZvcamwx01bVNjmpnVWfR7xtI&sensor=false"
  = javascript_include_tag "//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js"

.selector
  %strong Show me:
  = form_tag search_path, method: :post, remote: true, id: 'search' do
    .checkboxes
      = label_tag do
        Stores
        = check_box_tag 'Stores', 'true'
      = label_tag do
        Queries
        = check_box_tag 'Queries', 'true'
    = label_tag 'Within'
    = text_field_tag 'within'
    km of:
    = select_tag 'center', options_for_select(@centers)

